<head>
  <title>Transfair</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
      <!-- header goes here  -->
    <div class="row">
      <div class="span9">
        <!-- hero goes here  -->		
        <!-- navbar goes here  -->
        <div class="content">
          <h1>Transfair</h1>
          <p class="notice"><%= notice %></p>
          <p class="alert"><%= alert %></p>
            
          <%= yield %>
        </div>
      </div> <!-- /.span9 -->
      <!-- sidebar goes here  -->
    </div> <!-- /.row -->
    <!-- footer goes here -->
  </div> <!-- /.container -->
</body>
