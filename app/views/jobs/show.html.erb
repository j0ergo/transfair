<%- model_class = Job -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl> <%# dl-horizontal did not work fine with empty fields #%>
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @job.name %></dd>

  <dt><strong><%= model_class.human_attribute_name(:client_id) %>:</strong></dt>
  <dd><%= Client.find_by_id(@job.client_id).full_name %></dd>

  <dt><strong><%= model_class.human_attribute_name(:deadline_client) %>:</strong></dt>
  <dd><%= @job.deadline_client %></dd>

  <dt><strong><%= model_class.human_attribute_name(:deadline_intern) %>:</strong></dt>
  <dd><%= @job.deadline_intern %></dd>

  <dt><strong><%= model_class.human_attribute_name(:job_type_id) %>:</strong></dt>
  <dd><%= @job.job_type_id %></dd>

  <dt><strong><%= model_class.human_attribute_name(:job_status_id) %>:</strong></dt>
  <dd><%= @job.job_status_id %></dd>

  <dt><strong><%= model_class.human_attribute_name(:client_paid) %>:</strong></dt>
  <dd><%= @job.client_paid %></dd>

  <dt><strong><%= model_class.human_attribute_name(:rating) %>:</strong></dt>
  <dd><%= @job.rating %></dd>

  <dt><strong><%= model_class.human_attribute_name(:rating_text) %>:</strong></dt>
  <dd><%= @job.rating_text %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              jobs_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_job_path(@job), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              job_path(@job),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
