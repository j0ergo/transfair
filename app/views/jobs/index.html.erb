<h1>Listing jobs</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Client</th>
    <th>Deadline client</th>
    <th>Deadline intern</th>
    <th>Job type</th>
    <th>Job status</th>
    <th>Client paid</th>
    <th>Rating</th>
    <th>Rating text</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @jobs.each do |job| %>
  <tr>
    <td><%= job.name %></td>
    <td><%= job.client %></td>
    <td><%= job.deadline_client %></td>
    <td><%= job.deadline_intern %></td>
    <td><%= job.job_type %></td>
    <td><%= job.job_status %></td>
    <td><%= job.client_paid %></td>
    <td><%= job.rating %></td>
    <td><%= job.rating_text %></td>
    <td><%= link_to 'Show', job %></td>
    <td><%= link_to 'Edit', edit_job_path(job) %></td>
    <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Job', new_job_path, {"class"=>"btn primary"} %>
