<%= form_for @job, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :client_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :client_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :deadline_client, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :deadline_client, :class => 'datetime_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :job_type_id, :class => 'control-label' %>
    <div class="controls">
      <%= select("job",:job_type_id, JobType.all.collect { |p| [ p.name , p.id ] },{:selected => @job_type_class_id}) %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                jobs_path, :class => 'btn' %>
  </div>
<% end %>
